* * * 
* * 
* 


main(){
    triangle(1,1,4);
}

static void triangle(int row,int col,int total_row){
    if(row > total_row){
        return;
    }
    if(col <= row){
        System.out.print("*");
        triangle(row,col+1);
    }
    else{
        System.out.println();
        triangle(row+1,1);
    }
}


